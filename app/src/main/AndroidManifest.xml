<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.edu.upc.t_sis_app_estudiante"
    android:installLocation="auto">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_myicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".viewcontrollers.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/title_registrar"
            android:name=".viewcontrollers.activities.RegisterActivity" />
        <activity
            android:name=".viewcontrollers.activities.MenuActivity"
            android:label="@string/title_activity_menu" />
        <activity
            android:name=".viewcontrollers.activities.UpdateActivity"
            android:label="@string/title_activity_update"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>